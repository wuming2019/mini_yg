<SearchInput></SearchInput>

<!-- 轮播图开始 -->
<view class="index_swiper">
  <!-- 
    原图的宽 / 原图的高 = 变化后的图片的宽 / 变化后的图片的高度 
    750 /  340 = 750rpx / 340rpx
  -->
  <swiper
  circular
  autoplay
  indicator>
    <swiper-item
    wx:for="{{swiperList}}"
    wx:key="goods_id">
      <image  mode="widthFix" src="{{item.image_src}}" ></image>
    </swiper-item>
  </swiper>
  <!-- 轮播图结束 -->

  <!-- 导航开始 -->
  <view class="index_nav">
    <navigator
    wx:for="{{catitemList}}"
    wx:key="name"
    >
      <image mode="widthFix" src="{{item.image_src}}"></image>
    </navigator>
  </view>
  <!-- 导航结束 -->
</view>
